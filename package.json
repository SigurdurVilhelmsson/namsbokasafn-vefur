{
  "name": "namsbokasafn-sveltekit",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run prepare-content && vite dev",
    "build": "npm run prepare-content && npm run validate-content && vite build",
    "build:no-validate": "npm run prepare-content && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint .",
    "format": "prettier --write .",
    "process-content": "node scripts/process-content.js",
    "prepare-content": "npm run process-content",
    "validate-content": "node scripts/validate-content.js",
    "lint-content": "npm run prepare-content && node scripts/validate-content.js",
    "clean": "rm -rf build .svelte-kit static/content",
    "sync-content": "node scripts/sync-content.js",
    "docs:generate": "node scripts/generate-component-inventory.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.4",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.0.0",
    "@vite-pwa/sveltekit": "^1.1.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.3.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.17",
    "workbox-window": "^7.4.0"
  },
  "overrides": {
    "cookie": "^0.7.0"
  },
  "lint-staged": {
    "*.{ts,js,mjs,svelte}": [
      "eslint --fix"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "fuse.js": "^7.0.0",
    "katex": "^0.16.0",
    "rehype-katex": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-directive": "^3.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  }
}
