{
  "name": "namsbokasafn-sveltekit",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run copy-content && vite dev",
    "build": "npm run copy-content && npm run validate-content && vite build",
    "build:no-validate": "npm run copy-content && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "copy-content": "node scripts/copy-content.js",
    "validate-content": "node scripts/validate-content.js",
    "clean": "rm -rf build .svelte-kit static/content"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/node": "^22.0.0",
    "@vite-pwa/sveltekit": "^1.1.0",
    "eslint": "^9.0.0",
    "jsdom": "^24.1.3",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0",
    "workbox-window": "^7.4.0"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "fuse.js": "^7.0.0",
    "katex": "^0.16.0",
    "rehype-katex": "^7.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-directive": "^3.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  }
}
